# Hide/show all desktop icons (useful when presenting)
if [[ "$OSTYPE" =~ ^darwin ]]; then
	alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"
	alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"
fi

# Trash aliases (install trash first)
alias trashtex='trash *.log *.aux *.nav *.out *.snm *.toc *.vrb *.bbl *.blg *.dvi *.synctex.gz *.fdb_latexmk *.fls' # use rvf for "rm"
alias trashtexfull='trashtex && trash *.pdf'
alias trashvimswp="trash ~/.vim/swaps && mkdir ~/.vim/swaps"


# SHORTCUTS
alias gst="git st"
alias gd="git diff"
alias gs="git s"
alias gdf="git df"
alias gcdiff="git difftool --extcmd icdiff"
alias gl="git l"
alias glg="git lg"
